{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "dom", "dom.iterable", "esnext", "esnext.asynciterable"], // ADD THIS: Explicitly include esnext.asynciterable
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "$/*": ["./public/*"],

    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "Component.jsx"],
  "exclude": ["node_modules"]
}
